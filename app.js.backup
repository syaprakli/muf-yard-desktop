function handleFileImport(input) {
    const file = input.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (e) => {
        StorageManager.importData(e.target.result);
    };
    reader.readAsText(file);
    input.value = ''; // Reset
}

